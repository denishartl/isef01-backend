{
  "scriptFile": "__init__.py",
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "get",
        "post"
      ]
    },
    {
      "name": "comment",
      "type": "cosmosDB",
      "direction": "in",
      "databaseName": "isef01",
      "collectionName": "comment",
      "sqlQuery": "SELECT * from c where c.id = {comment_id}",
      "connectionStringSetting": "AzureCosmosDBConnectionString"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "outcomment",
      "databaseName": "isef01",
      "collectionName": "comment",
      "createIfNotExists": "true",
      "connectionStringSetting": "AzureCosmosDBConnectionString"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "$return"
    }
  ],
  "retry": {
    "strategy": "exponentialBackoff",
    "maxRetryCount": 3,
    "minimumInterval": "00:00:01",
    "maximumInterval": "00:00:03"
  }
}